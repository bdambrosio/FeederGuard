# Who's That? Configuration
# Copy this file to .env and fill in your values

# OpenAI API key for text-to-speech
OPENAI_API_KEY=your_openai_api_key_here

# Camera settings
CAMERA_IP=192.168.68.55
CAMERA_USER=FeederGuard
CAMERA_PASSWORD=your_camera_password
# Optional: Override camera URL entirely (leave empty for auto-detect)
CAMERA_URL_OVERRIDE=

# VLM settings
VLM_URL=http://192.168.68.76:6000/v1/chat/completions
VLM_MODEL=Qwen/Qwen2.5-VL-7B-Instruct
VLM_TIMEOUT=30

# Audio settings
AUDIO_DEVICE=hw:3,0
TTS_VOICE=alloy
